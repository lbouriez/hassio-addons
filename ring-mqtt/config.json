{
  "name": "Ring Devices via MQTT",
  "version": "3.3.0",
  "slug": "ring_mqtt",
  "description": "Integrate Ring Alarm, Smart Lighting and other devices via MQTT",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "host_network": true,
  "webui": "http://[HOST]:[PORT:55123]",
  "options": {
    "host": "localhost",
    "port": 1883,
    "ring_topic": "ring",
    "hass_topic": "homeassistant/status",
    "mqtt_user": "<mqtt_or_hassio_user>",
    "mqtt_pass": "<mqtt_or_hassio_password>",
    "ring_token": "",
    "enable_cameras": false,
    "enable_modes": false,
    "location_ids": [""]
  },
  "schema": {
   "host": "str",
    "port": "port",
    "ring_topic": "str",
    "hass_topic": "str",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "ring_token": "str",
    "enable_cameras": "bool",
    "enable_modes": "bool",
    "location_ids": ["str"]  
  }
}
